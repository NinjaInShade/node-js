<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
        <% if (orders.length > 0) { %>
        <div class="container max-width">
            <% for (let order of orders) { %>
                    <div class="my-3">
                        <h2 class="order-id">Order #<%= order._id %> - <a href="orders/<%= order._id%>" target="_blank" rel="noreferrer">Invoice</a></h2>
                            <% for (let product of order.products) { %>
                                <div class="my-3 d-flex">
                                    <img src="/<%= product.image_url %>" class="cart-image me-5" alt="Product image for <%= product.title %>">
                                    <div class="d-flex flex-column justify-content-between">
                                        <div>
                                            <h3 class="mb-3"><%= product.title %> | £<%= product.price %></h3>
                                            <!-- MYSQL -->
                                            <!-- <h4 class="mb-5">Quantity: product.orderitem.quantity</h4> -->
                                            <h4 class="mb-5">Quantity: <%= product.quantity %></h4>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                    </div>
            <% } %>
                    <!-- Should be the total price: -->
            <div class="mt-5">
                <h2>Total price: £<%= total_price %></h1>
            </div>
        </div>
    <% } else { %>
        <div class="max-width m-auto px-2"><h1>No orders</h1></div>
    <% } %>

<%- include('../includes/end.ejs') %>