<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="container max-width products-container">
                <% for (let product of prods) { %>
                    <div class="card mt-5" style="width: 18rem;">
                        <img src="/<%= product.image_url %>" class="card-img-top" alt="Product image for <%= product.title %>">
                        <div class="card-body">
                        <h2 class="card-title"><%= product.title %></h2>
                        <h4 class="card-text">Â£<%= product.price %></h4>
                        <p class="card-text"><%= product.description %></p>
                        <div class="d-flex">
                            <!-- MYSQL: -->
                            <!-- <a href="/products/product.id" class="btn btn-primary flex-grow-1 me-1">Detail</a> -->
                            <a href="/products/<%= product._id %>" class="btn btn-primary flex-grow-1 me-1">Detail</a>
                            <% if(is_authenticated){ %>
                                <form action="/cart" method="POST" class="flex-grow-1 ms-1">
                                    <button class="btn btn-primary w-100" type="submit">Add to cart</button>
                                    <input type="hidden" name="_csrf" value="<%= csrf_token %>" />
                                    <input type="hidden" name="productID" value="<%= product._id %>"/>
                                    <input type="hidden" name="productPrice" value="<%= product.price %>"/>
                                </form>
                            <% } %>
                        </div>
                        </div>
                    </div>
                <% } %>
            </div>
            <div class="max-width container mt-5">
              <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                  <li class="page-item <%= has_previous_page ? "" : "disabled"%>">
                    <a class="page-link" href="/?page=<%= previous_page %>" tabindex="<%= has_previous_page ? "1" : "-1"%>">Previous</a>
                  </li>
                        <% if(current_page !== 1) { %>
                            <li class="page-item"><a class="page-link" href="/?page=1">1</a></li>
                        <% } %>
                        <% if(!has_next_page) { %>
                            <li class="page-item"><a class="page-link" href="/?page=<%= previous_page - 1 %>"><%= previous_page - 1 %></a></li> 
                        <% } %>
                        <% if(has_previous_page && previous_page !== 1) { %>
                            <li class="page-item"><a class="page-link" href="/?page=<%= previous_page %>"><%= previous_page %></a></li> 
                        <% } %>
                        <li class="page-item active"><a class="page-link" href="/?page=<%= current_page %>"><%= current_page %></a></li>
                        <% if(has_next_page) { %>
                            <li class="page-item"><a class="page-link" href="/?page=<%= next_page %>"><%= next_page %></a></li>
                        <% } %>
                        <% if(!has_previous_page) { %>
                            <li class="page-item"><a class="page-link" href="/?page=<%= next_page + 1 %>"><%= next_page + 1 %></a></li>
                        <% } %>
                        <% if(has_next_page && highest_page !== next_page){ %>
                            <li class="page-item"><a class="page-link" href="/?page=<%= highest_page %>"><%= highest_page %></a></li>
                        <% } %>
                  <li class="page-item <%= has_next_page ? "" : "disabled"%>">
                    <a class="page-link" href="/?page=<%= next_page %>" tabindex="<%= has_next_page ? "1" : "-1"%>">Next</a>
                  </li>
                </ul>
              </nav>
           </div>
        <% } else { %>
            <div class="max-width m-auto px-2"><h1>No Products Found!</h1></div>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>